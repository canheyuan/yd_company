@import "/wxParse/wxParse.wxss";
@import '/style/serve.wxss';

page{background:#f7f7f7; padding-bottom:120rpx; }

.banner_img{width:100%; height:500rpx; background:#000; line-height:0; }
.banner_img image{width:100%; height:500rpx;}

.serve_info{background:#fff; margin-bottom:30rpx; padding:20rpx 25rpx;}
.serve_info .money{margin-bottom:5rpx;}
.serve_info .money .price{display:inline-block; font-size:36rpx; color:#ff6000; font-weight: bold; margin-right:20rpx;}
.serve_info .money .y_price{display:inline-block; font-size:28rpx; color:#9d9d9d; text-decoration:line-through; margin-right:10rpx;}
.serve_info .money .label{display:inline-block; height:32rpx; line-height:32rpx; font-size:22rpx; color:#ff7e30; background:#ffdac4; padding:0 20rpx; border-radius:14rpx; transform:scale(.9,.9);}
.serve_info .data_list{font-size:26rpx; color:#9d9d9d;display: block; text-overflow:ellipsis; white-space:nowrap; overflow:hidden; height:40rpx; line-height:40rpx; }
.serve_info .data_list .label{font-size:24rpx; color:#9d9d9d; display:inline-block; line-height:30rpx; width:250rpx;}
.serve_info .data_list .label icon{width:30rpx; height:30rpx; vertical-align: top; margin-right:5rpx;}
.serve_info .data_list .label .ico_xl{background-position:0 -120rpx;}
.serve_info .data_list .label .ico_zx{background-position:-60rpx -120rpx;}

.choose_list{ background:#fff; }
.choose_list .item{height:100rpx;  position:relative; border-bottom:1rpx solid #e5e5e5; }
.choose_list .item .tit{float:left; width:160rpx; padding-left:25rpx; font-size:28rpx; color:#9d9d9d; line-height:100rpx;}
.choose_list .item .ico_tri{width:50rpx; height:50rpx; position:absolute; right:20rpx; top:50%; margin-top:-25rpx; background-position: -198rpx -60rpx;}
.choose_list .item .info{overflow: hidden; padding-right:90rpx; height:100prx;}
.choose_list .item .info .txt{line-height:100rpx; font-size:28rpx; color:#333333;}
.choose_list .item .menu_ico{width:50rpx; height:50rpx; float:left; margin:25rpx 20rpx 0; background-position: 0 -50rpx;}
.choose_list .gys_item{overflow: hidden; padding:30rpx 25rpx;}

/* 详情 */
.serve_detail_ctn .title{text-align: center; line-height:0; padding:40rpx 0 25rpx;}
.serve_detail_ctn .title image{display:inline-block; width:118rpx; height:25rpx; margin:0 20rpx; vertical-align: top;}
.serve_detail_ctn .title text{font-size:26rpx; color:#f68b00; line-height:26rpx;}
.details_ctn{background:#fff;  min-height:500rpx;}

.serve_btm_wrap{position:fixed; left:0; bottom:0; z-index: 99; width:100%; padding:20rpx 30rpx; background:#fff;}
.serve_btm_wrap .blue_btn{display:inline-block; height:80rpx; line-height:80rpx; width: 38%; margin-right:3%;}
.serve_btm_wrap .orange_btn{display:inline-block; height:80rpx; line-height:80rpx;  width:50%;}