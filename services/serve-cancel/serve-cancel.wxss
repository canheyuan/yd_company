@import '/style/btn.wxss';

page{background:#f7f7f7;}
/* 取消原因 */
.cause_box{background:#fff; margin:30rpx 20rpx; border-radius:20rpx; padding-top:35rpx;}
.cause_list{padding:20rpx;}
.cause_list .li{margin-bottom:20rpx;}
.cause_list .li .txt{display:inline-block; height:70rpx; line-height:66rpx; background:#fff; border:2rpx solid #c2c2c2; padding:0 20rpx; font-size:30rpx; color:#666666; border-radius:20rpx;}
.cause_list .li .textarea{width:100%; height:160rpx; background:#fafafa; border:2rpx solid #e5e5e5; border-radius:10rpx; padding:20rpx; font-size:30rpx; box-sizing: border-box; line-height:40rpx; color:#666; margin-top:20rpx; display:none;}
.cause_list .li .textarea .placeholder{font-size:26rpx; color:#c2c2c2; line-height:40rpx;}
.cause_list .li.act .txt{color:#fff; background:#36c3fe; border-color:#36c3fe; box-shadow: 0 5rpx 24rpx rgba(54,195,254,.2);}
.cause_list .li.act .textarea{ display:block; }

/* 上传附件 */
.accessory_mdl{padding:20rpx;}
.accessory_mdl .title{font-size:34rpx; color:#111111; font-weight: bold; margin-bottom:30rpx;}
.file_imgs{ font-size:0; background:#fff; padding:15rpx; border-radius:10rpx;}
.file_imgs .li{width:210rpx; height:210rpx; float:left; margin-right:24rpx;  position:relative; background:#000;}
.file_imgs .li:nth-child(3n+3){margin-right:0;}
.file_imgs .li .img{width:100%; height:100%;}
.file_imgs .li .add_btn{width:100%; height:100%; box-sizing: border-box; border:1rpx solid #e5e5e5;  text-align: center; padding-top:45rpx; background:#fafafa;}
.file_imgs .li .add_btn .ico_add{width:80rpx; height:80rpx; background-position:0 -280rpx; margin-bottom:20rpx;}
.file_imgs .li .add_btn text{display:block; color:#c2c2c2; font-size:24rpx;}
.file_imgs .li .close_btn{position:absolute; top:-10rpx; right:-10rpx; width:40rpx; height:40rpx; background-color:#ff3c00; border-radius:100%; background-position:-200rpx -160rpx;}


















