page{background:#f7f7f7;}

.complaint_type{height:80rpx; border-top:1rpx solid #e5e5e5; border-bottom:1rpx solid #e5e5e5; background:#fff; padding:0 20rpx;}
.complaint_type .tit{float:left; color:#707070; font-size:28rpx; line-height:80rpx; margin-right:30rpx;}
.complaint_type .type_list{overflow: hidden;}
.complaint_type .type_list .radio{float:left; width:33.33%; transform:scale(.7); font-size:40rpx; text-indent:10rpx; line-height:80rpx;}

.complaint_box{background: #fff; border-radius:10rpx; margin:20rpx; padding:20rpx;}
.complaint_head{overflow: hidden; font-size:32rpx; padding:20rpx 0;}
.complaint_head .tit{float:left; margin-right:20rpx; color:#333333; line-height:50rpx; }
.complaint_head .input_box{overflow: hidden;}
.complaint_head .input_box .input{  width:100%; font-size:32rpx;}
.complaint_ctn .textarea{background:#fafafa; height:360rpx; border:1rpx solid #e5e5e5; width:100%; border-radius:10rpx; box-sizing: border-box; padding:20rpx; font-size:28rpx;}

/* 选择图片 */
.file_imgs{ font-size:0; margin-top:20rpx;}
.file_imgs .li{width:196rpx; height:196rpx; float:left; margin-right:38rpx; margin-bottom:20rpx; position:relative;}
.file_imgs .li:nth-child(3n+3){margin-right:0;}
.file_imgs .li .img{width:100%; height:100%;}
.file_imgs .li .add_btn{width:100%; height:100%; box-sizing: border-box; border:1rpx solid #e5e5e5;  text-align: center; padding-top:45rpx; background:#fafafa;}
.file_imgs .li .add_btn .ico_add{width:80rpx; height:80rpx; background-position:0 -280rpx; margin-bottom:20rpx;}
.file_imgs .li .add_btn text{display:block; color:#c2c2c2; font-size:24rpx;}
.file_imgs .li .close_btn{position:absolute; top:-10rpx; right:-10rpx; width:40rpx; height:40rpx; background-color:#ff3c00; border-radius:100%; background-position:-200rpx -160rpx;}

.check_btn{color:#2a99f1; font-size: 28rpx; text-align: center; padding:15rpx 0; margin-top:20rpx;}
.check_btn.hover{opacity:.6;}

.fix_btn{position:fixed; bottom:40rpx; left:50%; width:500rpx; margin-left:-250rpx;}








