.message_list{padding:20rpx;}
.message_list .li{background:#fff; border-radius:20rpx; padding:20rpx; position:relative; margin-bottom:30rpx;}
.message_list .li .main{height:160rpx; overflow:hidden; border-radius:10rpx; background:#f9f9f9;}
.message_list .li .title{font-size:34rpx; color:#333; margin-bottom:15rpx; font-weight: bold;}
.message_list .li .img{float:left; width:160rpx; height:160rpx; background:#eee;}
.message_list .li .info{overflow:hidden; padding:15rpx 20rpx;}
.message_list .li .info .text{font-size:30rpx; color:#333;height:80rpx; line-height:40rpx; margin-bottom:10rpx;display: -webkit-box; -webkit-box-orient: vertical; overflow: hidden; -webkit-line-clamp: 2;}
.message_list .li .info .time{font-size:24rpx; color:#999;}

