
page{padding-top:80rpx;}
.reach_load{top:-20rpx;}
/* 选项卡切换 */
.tag_box{position: relative;}
.tag_box .tag_list{margin:0 80rpx;}

/* 搜索按钮 */
.tag_box .tab_search{padding: 20rpx; position: absolute; top:3rpx; right:18rpx;}
.tag_box .tab_search .icon{width: 34rpx; height: 34rpx;}

/* 幻灯片 */
.found_slide_df{height: 320rpx; margin: 20rpx 20rpx 20rpx; border-radius:20rpx; overflow: hidden; box-shadow: 0 5rpx 20rpx rgba(0,0,0,.24); background:#ddd;}
.found_slide_box{height: 340rpx; padding: 20rpx 0 0; background:url(https://www.5iparks.com/static/yuanding/images/found/bg-gray-white.jpg) repeat-x center top; background-size:auto 100%;}
.found_slide{height:340rpx; overflow: hidden; border-radius:20rpx;}
.found_slide_item{position: relative;height: 320rpx; margin: 0 20rpx; border-radius:20rpx; overflow: hidden; box-shadow: 0 5rpx 20rpx rgba(0,0,0,.24); font-size:0;}
.found_slide_item .slide_img{width:100%; height:320rpx;}

/* 幻灯片文字 */
.found_slide_cont{position: absolute;height: 320rpx; width: 100%; top: 0; left: 0; background:url(https://www.5iparks.com/static/yuanding/images/found/banner_mask.png) repeat-x center bottom; background-size:auto 100%;}
.found_slide_title{position: absolute; left: 22rpx; bottom: 26rpx; font-size: 34rpx; color: #fff; width:600rpx;display: -webkit-box; -webkit-box-orient: vertical; overflow: hidden; -webkit-line-clamp: 1;}
.found_slide_dot{position: absolute; width: 72rpx; height: 72rpx; right: 18rpx; bottom: 16rpx; font-size: 30rpx; font-style: italic; line-height: 72rpx; color: #fff; /*background: rgba(0,0,0,.3);*/ border-radius: 50%; padding-left: 5rpx;}
.found_slide_dot .text_big{font-size: 46rpx;}


/* 新闻列表 */
.news_list{padding:0 20rpx 40rpx;}
.news_item{padding: 40rpx 8rpx; border-bottom: 1rpx solid #e5e5e5;}
.news_item .news_cont{float: left; width: 55%;}
.news_item .news_cont .news_title{font-size: 34rpx; font-weight: bold; line-height: 48rpx; color: #333; margin-bottom:10rpx; height:135rpx;}
.news_item .news_pic{float: right; width: 280rpx; height: 193rpx; border-radius: 10rpx; overflow: hidden;}
.news_item .news_pic .news_img{width: 280rpx; height: 193rpx;}
/* 标签 */
.news_item .news_icon{padding-top: 9rpx;}
.yd_label .text{height:34rpx; line-height:34rpx; padding:0 15rpx; border:1rpx solid #bdbdbd; border-radius:8rpx; font-size:22rpx; color:#aeaeae; margin-right:10rpx;}
/* 小图标带文字 */
.news_item .news_cont .ico_txt{margin-right: 0;}
.news_item .news_cont .ico_txt.time{float: left;}
.news_item .news_cont .ico_txt.visitor{float: right;}



/* -------------- 政策 --------------- */
.scroll_ctn .txt:first-child{width:280rpx;}
/* 行业专家 */
.index_mdl04{background: #f7f7f7; padding-top: 35rpx;}

.index_title{margin:0 22rpx 25rpx; font-weight: bold;}
.index_title text{color:#000; font-size:34rpx; display: block; overflow: hidden;}
.index_title .more_btn{float:right;color:#2a99f1; font-size:26rpx;}

.hot_act_list_box{height:380rpx;}
.hot_act_list {height:100%;}
.hot_act_list .li{width:280rpx; height:340rpx; margin-left: 20rpx; border-radius:10rpx; background:#fff; box-shadow: 0 5rpx 30rpx rgba(0,0,0,.1); position: relative;}
.hot_act_list .li .info{padding:0 15rpx 8rpx; text-align: center;}
.hot_act_list .li .info .title{color: #333; font-size:30rpx; line-height: 36rpx; padding-bottom: 8rpx; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;}
.hot_act_list .li .info .title text{font-size:26rpx; color:#999;}
.hot_act_list .li .info .office{color: #9d9d9d; font-size:24rpx; line-height: 36rpx; white-space: nowrap; overflow: hidden; text-overflow: ellipsis;}
.hot_act_list .li .info .project{color: #9d9d9d; font-size:24rpx; line-height: 36rpx; }
.hot_act_list .li .info .project text{ color: #ff6000; font-weight: bold;}
.user_head{width: 116rpx; height: 116rpx; padding: 16rpx 0 12rpx; margin: 0 auto;}
.user_head .img{width: 116rpx; height: 116rpx;border-radius: 50%;}
.ico_favorite_corner{position: absolute; width: 65rpx; height: 65rpx; top:0; right: 0; border-top-right-radius: 10rpx; overflow: hidden; background:url(https://www.5iparks.com/static/yuanding/images/icon/ico_favorite_corner.png) no-repeat top right; background-size: contain;}
.ico_favorite_corner.act{background-image:url(https://www.5iparks.com/static/yuanding/images/icon/ico_favorite_corner_act.png)}

/* 通用按钮 */
.btn_sm{height:52rpx; line-height:52rpx;  text-align: center; margin: 0 auto; border-radius:26px; color:#fff; font-size:28rpx; }
.btn_sm.blue{background:#6592fe; box-shadow: 0 4px 8px rgba(101,146,254,.38);}
.btn_sm.orange{background: linear-gradient(to right, #ff8a00, #ff6000); box-shadow: 0 4px 8px rgba(255,96,0,.38);}



/* 小图标带文字 */
.policy_area .news_icon{padding-top: 20rpx;}
.policy_area .ico_txt{margin: 4rpx 0; float: left; clear: both;}
