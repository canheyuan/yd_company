/* 服务公告 */
.zjll_mdl{height:138rpx; margin:20rpx;}
.zjll_mdl .title{width:65rpx; height:138rpx; float:left; margin-right:30rpx;}
.zjll_mdl .title .img{width:100%; height:100%;}
.zjll_list{overflow:hidden; height:138rpx; }
.zjll_list .li{height:100%; box-sizing: border-box; padding:15rpx 0;}
.zjll_list .li .top{margin-bottom:10rpx;}
.zjll_list .li .top .user{font-size:30rpx; color:#333; margin-right:20rpx;}
.zjll_list .li .top .time{font-size:28rpx; color:#9d9d9d;}
.zjll_list .li .btm .u_serve{display:inline-block; height:40rpx; line-height:40rpx; padding:0 20rpx; background:#72c1ef; font-size:24rpx; color:#fff; border-radius:10rpx;box-sizing: border-box; margin-right:20rpx;}
.zjll_list .li .btm .type{display:inline-block; height:40rpx; line-height:38rpx; padding:0 20rpx; background:#ffff; font-size:24rpx; color:#72c1ef; border-radius:10rpx; border:2rpx solid #bdbdbd; box-sizing: border-box;}

/* 推荐服务 */
.recommend_mdl{margin:50rpx 20rpx;}
.recommend_mdl .serve_list{background:#fff; border-radius:10rpx;  padding:10rpx 0;}

/* 我要开公司 */
.wykgs_mdl{padding:20rpx;}
.wykgs_title{overflow: hidden; margin-bottom:30rpx;}
.wykgs_title .ico_dp{width:40rpx; height:40rpx; background-position: -320rpx -210rpx; vertical-align: top; margin-right:10rpx;}
.wykgs_title .tit1{font-size:34rpx; color:#111111; line-height:40rpx; font-weight: bold; margin-right:10rpx;}
.wykgs_title .tit2{font-size:26rpx; color:#999999; line-height:40rpx;}
.wykgs_list .item{float:left; width:223rpx; height:242rpx; background-position: center top; background-repeat:no-repeat; background-size:100% 100%;box-sizing: border-box; padding:35rpx 18rpx;  color:#5b87a0; margin-right:20rpx;}
.wykgs_list .item:last-child{margin-right:0;}
.wykgs_list .item .title{font-size:30rpx; padding-bottom:25rpx; margin-bottom:20rpx; position:relative; font-weight: bold;}
.wykgs_list .item .title::after{content:''; display:block; width:40rpx; height:6rpx; background:#74a2bd; position:absolute; bottom:0; left:0;}
.wykgs_list .item .p{font-size:22rpx; line-height:32rpx; font-weight: bold; }
.wykgs_list .item:nth-child(2){color:#b58c46;}
.wykgs_list .item:nth-child(2) .title::after{background:#cca157;}
.wykgs_list .item:nth-child(3){color:#6ba25f;}
.wykgs_list .item:nth-child(3) .title::after{background:#7db771;}

/* 热门供应商 */
.gys_mdl{padding:20rpx;}
.gys_list {background:#fff; border-radius:10rpx; padding:25rpx 16rpx;}




