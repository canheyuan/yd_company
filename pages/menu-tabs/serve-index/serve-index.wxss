@import '/style/serve.wxss';

page{background:#fff;}

.serve_tit{display: block;  margin-bottom:20rpx; font-weight: bold;}
.serve_tit .h3{color:#000; font-size:34rpx; display: block; overflow: hidden;}
.serve_tit .more{float:right;color:#2a99f1; font-size:26rpx; margin-top: 6rpx;}

.serve_top{height:360rpx; background-repeat:no-repeat; background-position:center top;  background-size:100% auto; }

/* 顶部搜索 */
.search_mdl{ padding:20rpx 25rpx;}
.search_box{height:60rpx; line-height:60rpx; background:rgba(255,255,255,.4); border-radius:10rpx; text-align: left;}
/* .search_box .ico_search{ width:40rpx; height:40rpx; background-position:-280rpx -210rpx; display:inline-block; margin:10rpx 20rpx 0 30rpx;} */
.search_box .ico_search{ width:40rpx; height:40rpx; background-position:-280rpx -210rpx; float:left; margin:10rpx 20rpx 0 30rpx;}
.search_box .input{display:block; height:60rpx; line-height:60rpx; color:#fff; font-size:28rpx;}

/* 顶部幻灯片 */
.banner_box{position:relative; z-index: 9; border-radius: 0rpx;  overflow:hidden;}
.banner_box .slide_nav{position:absolute; bottom:50rpx; left:0; z-index:20; text-align: center; font-size:0; width:100%;}
.banner_box .slide_nav .dot{display:inline-block; width:20rpx; height:20rpx; border-radius:100%; overflow: hidden; background:#fff; margin:0 6rpx;}
.banner_box .slide_nav .dot.act{background:#4e8bff;}
.banner_slide{width:100%; height:260rpx; overflow: hidden; border-radius: 0rpx; }
.banner_slide .slide_img{width:730rpx; height:240rpx; border-radius:20rpx; margin:0 10rpx; box-shadow: 0 5rpx 20rpx rgba(0,0,0,.24); }
.banner_df{width:730rpx; height:240rpx; border-radius:20rpx; margin:0 10rpx; box-shadow: 0 5rpx 20rpx rgba(0,0,0,.24);}

/* 菜单 */
.serve_menu{ display: flex; flex-wrap: wrap; width:100%; padding:0rpx 0 10rpx; background:#ffff; margin:10rpx 0;}
.serve_menu .li{ width:20%; text-align: center; padding:25rpx 0; font-size:0;}
.serve_menu .li .ico{width:60rpx; height:60rpx;  margin-bottom:20rpx;}
.serve_menu .li .ico.none{ background:#eee; border-radius:10rpx;}
.serve_menu .li .text{font-size:26rpx; color:#333333; line-height:26rpx;}
.serve_menu .li.hover .text{color:#4e8bff;}

