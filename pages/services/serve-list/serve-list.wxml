
<!-- 筛选头部 -->
<view class="screen_head">
    <view class="item" 
        wx:for="{{screenList}}" wx:key="screenList{{index}}" 
        wx:for-item="screenItem" wx:for-index="screenIndex"
    >
        <view class="title" bindtap="changeScreenFn" data-index="{{screenIndex}}">
            {{screenItem.son[screenItem.index].name}}
            <view class="tri" wx:if="{{screenItem.son.length>1}}"></view>
        </view>
        <view class="pop" hidden="{{screenItem.popHide}}" wx:if="{{screenItem.son.length>1}}">
            <text 
                class="option" wx:for="{{screenItem.son}}" wx:key="screenSon{{index}}"
                bindtap="changeScreenSonFn" data-pindex="{{screenIndex}}" data-index="{{index}}"
            >{{item.name}}</text>
        </view>
    </view>
