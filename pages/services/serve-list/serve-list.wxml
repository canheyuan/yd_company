        <view class="title">销量</view>
    </view>
    <view class="item">
        <view class="title">价格</view>
    </view> -->
</view>


<!-- 循环列表 -->
<view wx:for="{{tagList}}" wx:key="tagList{{index}}"  hidden="{{tagIndex!=index}}" wx:if="{{item.show}}">
    <my-serve-order-list target-page="myServeOrderList" tag-type="{{item.type}}" reach-data="{{item.reach}}"></my-serve-order-list>
</view>