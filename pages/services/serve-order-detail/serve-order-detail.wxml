            <view class='dt'>购买数量</view>
            <view class='dd'>
                <text class="txt">1</text>
            </view>
        </view>

        <!-- 支付金额 -->
        <view class='dl'>
            <view class='dt'>支付金额</view>
            <view class='dd'>
                <text class="pay_price txt f_orange">￥1000</text>
            </view>
        </view>
       
    </view>

    <!-- 订单其他信息 -->
    <view class="order_other">
        <view class="p">
            <icon class="icons ico_bill"></icon>
