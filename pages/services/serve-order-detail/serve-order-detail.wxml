            </view>
        </view>

        <!-- 备注信息 -->
        <view class='dl bor_no' style="padding-bottom:0;">
            <view class='dt fl_none'>备注信息</view>
            <view class='dd'>
                <text class="textarea">备注信息备注信息备注信息备注信息备注信息备注信息备注信息</text>
            </view>
        </view>

        <!-- 购买数量 -->
