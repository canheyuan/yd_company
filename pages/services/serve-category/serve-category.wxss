page{height: 100%; background: #fff;}
/* 左边 */
.serve_menu{height: 100%; width: 170rpx; border-top: 1rpx solid #ddd; box-sizing: border-box; background: #f6f6f6; overflow-y: auto; float: left;}
.serve_menu .li{color: #555; font-size: 26rpx; line-height: 110rpx; text-align: center;}
.serve_menu .li.act{color: #333; font-size: 30rpx; font-weight: 500; background: #fff; position: relative;}
.serve_menu .li.act::before{position:absolute; left:0; top:40rpx; content:''; display:inline-block; width:8rpx; height:30rpx; background:#4a7df6; }


/* 右边 */
.serve_ctn{height: 100%; padding: 0 20rpx; overflow: hidden;  border-top: 1rpx solid #ddd; box-sizing: border-box; }

/* 搜索 */
.search_mdl{padding:25rpx 10rpx;}
.search_box{height:60rpx; line-height:60rpx; background:#f0f0f0; border-radius:30rpx;}
.search_box .ico_search{ width:40rpx; height:40rpx; background-position:-80rpx -160rpx; float:left; margin:10rpx 20rpx 0 30rpx;}
.search_box .input{display:block; height:60rpx; line-height:60rpx; color:#333; font-size:28rpx; box-sizing:border-box; width:420rpx;}
.search_box .placeholder{color:#c2c2c2; }

.serve_main{height:calc(100% - 130rpx); overflow: auto;}
/* Banner */
.banner_box{font-size: 0; line-height: 0; margin-top:20rpx;}
.banner_box .img{width: 100%; height: auto;}

/* 服务项目 */
.list_box{ margin-top: 40rpx;}
.list_box .title{color: #666; font-size: 26rpx; line-height: 40rpx; padding: 0 4rpx; margin-bottom: 22rpx; font-weight: bold;}
.list_box .title icon{width: 40rpx; height: 40rpx; margin-right: 2rpx; display: block; float: left;}
.list_box .title icon.ico_tj{background-position:-400rpx -160rpx;}
.list_box .title icon.ico_hot{background-position:-360rpx -210rpx;}
.list_box .ul{display: flex; flex-flow: row wrap; justify-content: flex-start; margin: -4rpx 0 -3rpx 0;}
.list_box .ul .li{flex: 0 0 32.2%; color: #333; font-size: 26rpx; line-height: 34rpx; text-align: center; padding: 20rpx 0; margin: 4rpx 7rpx 3rpx 0; border-radius: 8rpx; background: #fafafa;}
.list_box .ul .li .text{display: flex; justify-content: center; align-items: center; min-height: 68rpx;}

/* 三级图标列表 */
.third_list .li{float:left; width:33.3%; text-align: center; margin-bottom:30rpx;}
.third_list .li .icon{width:70rpx; height:70rpx;}
.third_list .li .text{font-size:26rpx; color:#333333;}

/* 成为服务商 */
.btm_btn{position:fixed; bottom:20rpx; right:20rpx; z-index:99; width:122rpx; height:122rpx;}
.btm_btn image{width:100%; height:100%;}


