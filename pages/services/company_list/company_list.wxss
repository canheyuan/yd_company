page{background-color: #f7f7f7;}

/* 公司列表 */
.company_list .li{margin:25rpx 20rpx 0 20rpx;box-shadow:10rpx 10rpx 10rpx #e8e8e8;}
.company_list .li .top{background-color: #fff;width:710rpx;height:310rpx;border-top-right-radius:10rpx;border-top-left-radius:10rpx;}
.company_list .li .top .group_logo{width:200rpx;height:200rpx;float:left;margin:15rpx;}
.company_list .li .top .info{overflow: hidden;}
.company_list .li .top .info .info_title{font-size:34rpx;color:#333;font-weight: bold;margin:20rpx 0; }
.company_list .li .top .info .info_type{height:34rpx; overflow: hidden; font-size:0;}
.company_list .li .top .info .info_type .label{border:1rpx solid #BDBDBD;font-size:22rpx;text-align: center;color:#BDBDBD;border-radius:10rpx;line-height: 30rpx; padding:0 15rpx;display: inline-block; margin-right:15rpx;}
.company_list .li .top .info .info_content{font-size:26rpx;color:#555;margin:25rpx 30rpx 0 0; display: -webkit-box; -webkit-box-orient: vertical; overflow: hidden; -webkit-line-clamp: 3;}
.company_list .li .btm{background-color: #fcfcfc; padding:15rpx 200rpx;  border-top:1rpx solid #e5e5e5; text-align: center; }