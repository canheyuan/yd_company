
<view class='act_apply_box'>
    <form report-submit="true" bindsubmit="submitFn">
        <view class='title'>{{langData.public.writeInfo[lang]}}</view>
        <view class='form_mdl'>
            <view class='dl clearfix'>
                <text class='dt'>{{langData.public.companyName[lang]}}</text>
                <view class='dd'>
                    <text class='txt'>{{detailData.entName}}</text>
                    <!--<input type='text' class='txt' placeholder='' placeholder-class='pl_input'  />-->
                </view>
            </view>
            <view class='dl clearfix'>
                <text class='dt'>{{langData.public.contact[lang]}}</text>
                <view class='dd'>
                    <text class='txt'>{{detailData.contact}}</text>
                    <!--<input type='text' class='input' placeholder='{{data.contact}}' placeholder-class='pl_input' />-->
                </view>
            </view>
            <!-- <view class='dl'>
                <text class='dt'>职位</text>
                <view class='dd'>
                    <text class='dt'>{{data.position}}</text>
                </view>
            </view> -->
            <view class='dl clearfix '>
                <text class='dt'>{{langData.public.contactPhone[lang]}}</text>
                <view class='dd'>
                    <text class='dt'>{{detailData.contactPhone}}</text>
                    <!--<input type='text' class='input' placeholder='{{data.contactPhone}}' placeholder-class='pl_input' />-->
                </view>
            </view>
        </view>

        <view style="padding:100rpx 50rpx 0;">
            <!-- <button class='blue_btn' bindtap="submit">立即提交</button> -->
            <button class='blue_btn' form-type='submit'>{{langData.public.submitBtn[lang]}}</button>
        </view>
    </form>
</view>
