<view class='order_banner'>
  <image mode='widthFix' src='{{domainUrl}}/images/order/order_banner.png'></image>
</view>
<!-- 选项卡切换 -->
<view class='tag_box' id='tag_box'>
  <view class='tag_list'>
    <!-- 循环选项卡 -->
    <view 
      wx:for="{{tagList}}" wx:key="{{index}}"
      class='tag_item {{tagIndex==index?"act":""}}' 
      data-index="{{index}}" 
      bindtap='tagChangeFn'
    >{{item.name}}</view>
  </view>
</view>
