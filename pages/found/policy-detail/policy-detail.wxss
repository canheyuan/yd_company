@import "/wxParse/wxParse.wxss";
page{padding-bottom: 110rpx;}
/* 政策匹配 */
.news_title_box{}
.news_title{font-size: 46rpx; font-weight: 500; line-height: 56rpx; padding: 35rpx 40rpx}
.news_cgl_box{height: 351rpx; font-size: 28rpx; color: #888; padding: 14rpx 30rpx 0; background:url(https://www.5iparks.com/static/yuanding/images/found/cgl_card.jpg) no-repeat center top; background-size: 100% 365rpx;}
.cgl_card{height: 272rpx; padding-top: 26rpx; position: relative;}
.cgl_card .title{color: #555; font-size: 34rpx; font-weight: 500; text-align: center; padding-bottom: 26rpx;}
.cgl_card .percent{width: 100rpx; color: #fff; font-size: 34rpx; font-weight: 500; text-align: center; position: absolute; top: 26rpx; right: 0;}
.cgl_card .col1{padding-left: 30rpx; float: left;}
.cgl_card .col1 view, .cgl_card .col2 view{padding-bottom:10rpx;}
.cgl_card .col1 .money{}
.cgl_card .col1 .money text{color: #ff6000; font-size: 32rpx; font-weight: bold;}
.cgl_card .col1 .time{}
.cgl_card .col2{width: 43%; padding: 4rpx 10rpx 14rpx 0; float: right;}
.cgl_card .col2 .standard text{color: #09bb07; font-weight: 500;}
.cgl_card .col2 .await text{color: #f76260; font-weight: 500;}
.cgl_card .check_detail_btn{color: #f59000; height: 56rpx; line-height: 56rpx; text-align: center; border: 2rpx solid #ffa82c; border-radius: 10rpx; margin: 0 auto; clear: both;}

/* 小图标带文字 */
.ico_txt{margin-right: 0;}
.cgl_card .ico_txt{font-size: 28rpx; color: #888;}
.policy_title_box .ico_txt.institution{float: left; width: 56%;}
.policy_title_box .ico_txt.time{float: right;}

/* 政策标题 */
.policy_title_box{padding-bottom: 16rpx; border-bottom: 1rpx solid #e2e2e2;}
.policy_title{font-size: 38rpx; font-weight: 500; line-height: 52rpx; padding: 35rpx 40rpx;}
.policy_title text{color: #f76260; font-weight: normal; display: block;}
.policy_title_box .info{padding: 0 40rpx;}

/* 政策详情 */
.bxnr_tit{padding-top: 56rpx; background: #f7f7f7; padding-bottom: 24rpx; margin-bottom: 0;}

/* 附件区 */
.attached_box{font-size: 30rpx; padding: 0 30rpx; margin-bottom: 50rpx;}
.attached_box .title{color: #111; font-weight: 500; margin-bottom: 24rpx;}
.attached_box .ul{background: #f5f5f5; border-radius: 10rpx; padding: 38rpx 26rpx;}
.attached_box .ul .li{color: #333; line-height: 40rpx; padding-left: 48rpx; margin-bottom: 36rpx; background:url(https://www.5iparks.com/static/yuanding/images/icon/ico_download_sm.png) no-repeat 0 2rpx; background-size: 36rpx;}
.attached_box .ul .li:last-child{margin-bottom: 0;}

/* 访问原文链接 */
.original_link{color:#2a99f1; font-size: 30rpx; line-height: 40rpx; padding-left: 48rpx; margin: 0 56rpx 60rpx;background:url(https://www.5iparks.com/static/yuanding/images/icon/ico_link.png) no-repeat 2rpx 2rpx; background-size: 36rpx;}

/* 底部工具栏 */
.tool_bar{box-sizing: border-box; width: 100%; height: 110rpx; padding: 0 30rpx 0; position: fixed; bottom: 0; background: #f9f9f9; z-index: 2;box-shadow: 0 -7rpx 24rpx rgba(0,0,0,.08);}
.icon_box{width: 76rpx; color: #666;font-size: 22rpx; line-height: 32rpx; text-align: center; padding-top: 44rpx; margin: 21rpx 13rpx 0; float: right; background: no-repeat center top; background-size: 42rpx 42rpx;}
.icon_favorite{background-image:url(https://www.5iparks.com/static/yuanding/images/icon/ico_favorite.png); }
.icon_favorite.act{color: #d7894e; background-image:url(https://www.5iparks.com/static/yuanding/images/icon/ico_favorite_act.png);}
/* 蓝色按钮 */
.blue_btn{height:82rpx; line-height:82rpx; border-radius:41px; font-size:36rpx; margin:14rpx 0 0 20%; float: left; box-shadow: 0 6px 10px rgba(101,146,254,.36);}

/* 清除浮动 */
.clearfix::after {content: "."; clear: both; display: block; overflow: hidden; font-size: 0; height: 0;}