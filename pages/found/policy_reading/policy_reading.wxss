page{padding-bottom: 60rpx;}
/* 政策匹配 */
.news_cgl_box{height: 228rpx; font-size: 28rpx; color: #888; padding: 32rpx 30rpx 0; background:url(https://www.5iparks.com/static/yuanding/images/found/cgl_card_sm.jpg) no-repeat center top; background-size: 100% 260rpx;}
.cgl_card{padding-top: 26rpx; position: relative;}
.cgl_card .title{color: #555; font-size: 34rpx; font-weight: 500; text-align: center; padding-bottom: 26rpx;}
.cgl_card .percent{width: 100rpx; color: #fff; font-size: 34rpx; font-weight: 500; text-align: center; position: absolute; top: 26rpx; right: 0;}
.cgl_card .col1{padding-left: 30rpx; float: left;}
.cgl_card .col1 view, .cgl_card .col2 view{padding-bottom:10rpx;}
.cgl_card .col1 .money{}
.cgl_card .col1 .money text{color: #ff6000; font-size: 32rpx; font-weight: bold;}
.cgl_card .col1 .time{}
.cgl_card .col2{width: 43%; padding: 4rpx 10rpx 14rpx 0; float: right;}
.cgl_card .col2 .standard text{color: #09bb07; font-weight: 500;}
.cgl_card .col2 .await text{color: #f76260; font-weight: 500;}

/* 小图标带文字 */
.ico_txt{margin-right: 0;}
.cgl_card .ico_txt{font-size: 28rpx; color: #888;}

/* 政策解读 */
.reading_box{margin: 50rpx 30rpx;}
.policy_title{font-size: 32rpx; font-weight: 500; line-height: 46rpx; margin: 35rpx 0 66rpx;}
.policy_title text{color: #f76260; font-weight: normal; display: block;}
.reading_box .ul{color: #333; font-size: 30rpx; line-height: 46rpx; background: #f5f5f5; border-radius: 10rpx; padding: 24rpx 16rpx; margin: 35rpx 0 0;}
.reading_box .ul .li{padding-left: 48rpx; margin-bottom: 18rpx; background:url(https://www.5iparks.com/static/yuanding/images/icon/ico_correct_big.png) no-repeat 0 6rpx; background-size: 36rpx;}
.reading_box .ul .li.await{background-image:url(https://www.5iparks.com/static/yuanding/images/icon/ico_wrong_big.png);}
.reading_box .ul .li:last-child{margin-bottom: 0;}

/* 按钮区域 */
.txtnbtn_box{color: #de6a1c; font-size: 26rpx; text-align: center;}
.reminder{}
/* 蓝色按钮 */
.blue_btn{width: 64%; margin: 26rpx auto 0;}

/* 清除浮动 */
.clearfix::after {content: "."; clear: both; display: block; overflow: hidden; font-size: 0; height: 0;}