.jqhd_mdl .recommend_title{margin-left:20rpx; margin-bottom:0;} */


/* 园区简介 */
.yqjj_mdl{padding:20rpx;}
.yqjj_ctn{background:#fff; border-radius:20rpx; padding:30rpx 20rpx; font-size:26rpx; color:#333;}
.yqjj_ctn .p{text-indent:2em; font-size:30rpx; line-height:48rpx; color:#333333; margin-bottom:20rpx;}
.yqjj_ctn image{max-width:100%!important; margin-bottom:20rpx;}
.traffic_box{background:#f5f5f5; border-radius:10rpx; padding:20rpx 20rpx;}
.traffic_box .tit{font-size:30rpx; color:#333; margin-bottom:10rpx;}
.traffic_box .txt{font-size:28rpx; color:#7f7f7f; margin-left:115rpx; margin-bottom:20rpx; line-height:40rpx;}

.fixed_btn_wrap{position:fixed; bottom:0; left:0; width:100%; box-sizing:border-box; height:110rpx; padding:15rpx 20rpx; background:#fff;}
.orange_btn{height:80rpx; line-height:80rpx; display:block; text-align: center; color:#fff; font-size:36rpx; border-radius:40rpx; 
background:-moz-linear-gradient(left,#ff6000,#ff8a00);/*火狐*/
background: -webkit-linear-gradient(left, #ff6000, #ff8a00);   /*Safari5.1 Chrome 10+*/}

.blue_btn02{height:80rpx; line-height:80rpx; display:inline-block; text-align: center; color:#fff; font-size:36rpx; border-radius:40rpx; background:#36c3fe; width:40%;}
.blue_btn03{height:80rpx; line-height:80rpx; display:inline-block; text-align: center; color:#fff; font-size:36rpx; border-radius:40rpx; background:#6592fe; width:57%; float:right;}

.wyytj_btn{width:120rpx; height:120rpx; border-radius:100%;  position:fixed; bottom:140rpx; right:20rpx; font-size:26rpx; color:#fff; text-align: center; padding-top:33rpx; line-height:30rpx; box-sizing: border-box;  box-shadow: 0 10rpx 34rpx rgba(255,96,0,.62);
background:-moz-linear-gradient(left,#ff8a00,#ff6000);/*火狐*/
background: -webkit-linear-gradient(left, #ff8a00, #ff6000);   /*Safari5.1 Chrome 10+*/}

.shouquan_pop{width:70%; background:#ffff; margin:0 auto; border-radius:10rpx; position:relative; padding:50rpx 30rpx; box-sizing: border-box;}
.shouquan_pop .h3{font-size:40rpx; color:#333; font-weight:bold; margin-bottom:50rpx;}
.shouquan_pop .p{font-size:28rpx; color:#666; margin-bottom:80rpx; display:block; line-height:50rpx;}
.shouquan_pop .btn{ font-size:30rpx;background:#6592fe; color:#fff; height:80rpx; line-height:80rpx; border-radius:40rpx; display:inline-block; width:400rpx;}
















