page{background:#f7f7f7;}

/* 推荐记录头部 */
.tjjl_head{height:430rpx; text-align: center; box-sizing: border-box; padding:70rpx 30rpx 0;}
.tjzl_tit{ text-align: center; font-size:28rpx; color:#777777; line-height:40rpx; height:40rpx;  margin-bottom:40rpx;}
.tjzl_tit::before{content:'————'; color:#d7d7d7; display:inline-block; font-size:24rpx; line-height:40rpx; margin-right:30rpx; vertical-align: top;}
.tjzl_tit::after{content:'————'; color:#d7d7d7; display:inline-block; font-size:24rpx; line-height:40rpx; margin-left:30rpx; vertical-align: top;}
.tjzl_tit .ico_tjzl{width:40rpx; height:40rpx; background-position: -450rpx -370rpx; margin-right:10rpx; vertical-align: top;}

.tjzl_data{ display:box; display:-webkit-box; margin:0 60rpx 60rpx;}
.tjzl_data .item{display:block; width:100%; box-flex: 1; -webkit-box-flex: 1; border-right:2rpx solid #e8e8e8; }
.tjzl_data .item:last-child{border-right:0;}
.tjzl_data .item .txt{font-size:28rpx; color:#8d8d8d; margin-bottom:25rpx; line-height:36rpx;}
.tjzl_data .item .num{font-size:56rpx;  font-weight:bold; line-height:60rpx;}
.tjzl_data .item.hover{opacity:.6;}

.tg_btn{font-size:34rpx; color:#333333; height:50rpx; line-height:50rpx; padding:25rpx 0; text-align: left; }
.tg_btn text{display:inline-block; line-height:50rpx;}
.tg_btn .ico_ewm{width:50rpx; height:50rpx; line-height:50rpx; background-position: -400rpx -420rpx; vertical-align: top; float:left; margin-right:10rpx;}
.tg_btn .ico_tri{width:50rpx; height:50rpx;  line-height:50rpx; background-position: -198rpx -60rpx; vertical-align: top; float:right;}

.tjjl_ctn{background:#fff; padding:30rpx 0 0; margin-top:30rpx;}
.tjjl_ctn .yd_title01{margin-left:20rpx; margin-bottom:20rpx; }
.tjjl_list .li{padding-top:30rpx; padding-left:20rpx;}
.tjjl_list .li .img{float:left; width:120rpx; height:120rpx; border-radius:100%; margin-right:20rpx;}
.tjjl_list .li .info{overflow:hidden; position:relative; padding-right:180rpx; border-bottom:2rpx solid #e5e5e5; padding-bottom:30rpx;}
.tjjl_list .li .info .name{font-size:32rpx; color:#333333; margin-bottom:10rpx; height:40rpx;}
.tjjl_list .li .info .p{font-size:28rpx; color:#777777; margin-bottom:10rpx;}
.tjjl_list .li .info .ico_txt{font-size:24rpx; color:#9d9d9d; line-height:30rpx;}
.tjjl_list .li .info .ico_time{width:30rpx; height:30rpx; background-position: -120rpx -120rpx; vertical-align: top;}
.tjjl_list .li .info .btn{position:absolute; right:20rpx; top:45rpx; width:150rpx; height:60rpx; line-height:60rpx; color:#fff; font-size:28rpx;
border-radius:30rpx; text-align: center; 
background:-moz-linear-gradient(left,#17b8fb,#3f90ff);/*火狐*/
background: -webkit-linear-gradient(left, #17b8fb, #3f90ff);   /*Safari5.1 Chrome 10+*/
}
.tjjl_list .li .info .btn.hover{background:#3f90ff;}
.tjjl_list .li:last-child .info{border-bottom:0;}

.more_btn{text-align: center; font-size:30rpx; color:#2a99f1; padding:20rpx 0; margin-bottom:30rpx;}







