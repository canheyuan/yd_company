.updata_box{padding:20rpx 25rpx;}
.updata_box .title{color:#888; font-size:26rpx; }
.updata_ctn{height:100rpx; position:relative; border-bottom:1rpx solid #e2e2e2;}
.updata_ctn .input{height:100rpx; line-height:100rpx; font-size:32rpx; color:#333;}
.updata_ctn .clear_input{height:100rpx; width:100rpx; text-align: right; position:absolute; top:0;  right:0; z-index:99; line-height:100rpx;}
.updata_ctn .ico_reset{width:40rpx; height:40rpx; background-position:-200rpx -160rpx; background-color:#b5b5b5; border-radius:100%; vertical-align: middle; }
.updata_box .tip{font-size:28rpx; color:#9d9d9d; margin-top:15rpx;}

.btn_wrap{position:fixed; bottom:120rpx; left:20%; width:60%;}


