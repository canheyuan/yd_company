page{background:#f7f7f7;}
.coupon_list{padding:30rpx 0rpx 0;}
.coupon_list .li{display:block; width:748rpx; height:336rpx; color:#fff; position:relative; margin-bottom:10rpx; border-radius:10rpx;}

.coupon_list .li .status{position:absolute; left:40rpx; top:32rpx; width:120rpx; height:34rpx; line-height:34rpx; text-align: center; display:inline-block; font-size:22rpx; color:#fff;  background:#fec92f; border-radius:8rpx;}
.coupon_list .li .tit{position:absolute; left:180rpx; top:40rpx; width:320rpx; height:50rpx; line-height:50rpx; display:block; font-size:36rpx; color:#fff; }
.coupon_list .li .get_time{position:absolute; left:180rpx; top:104rpx; width:320rpx; height:34rpx; line-height:34rpx;  display:inline-block; font-size:24rpx; color:#fff; }
.coupon_list .li .mf_txt{position:absolute; right:20rpx; top:64rpx; width:215rpx; line-height:60rpx;  text-align: center; display:inline-block; font-size:48rpx; color:#fff; }
.coupon_list .li .yh_txt{position:absolute; right:20rpx; top:40rpx; width:215rpx; line-height:60rpx;  text-align: center; display:inline-block; font-size:48rpx; color:#fff; }
.coupon_list .li .yh_txt .num{margin-bottom:5rpx;}
.coupon_list .li .yh_txt .tip{font-size:24rpx; line-height:40rpx;}
.coupon_list .li .use_time{position:absolute; left:40rpx; top:244rpx;  line-height:40rpx;  font-size:24rpx; color:#9d9d9d; }
.coupon_list .li .use_time .ico_time{ width:30rpx; height:30rpx; background-position: -120rpx -120rpx; vertical-align: middle; position:relative; top:-2rpx; margin-right:5rpx;}
.coupon_list .li .jd_box{position:absolute; left:40rpx; top:204rpx; background:#e3e3e3; height:12rpx; width:520rpx; border-radius:6rpx;}
.coupon_list .li .jd_bar{position:absolute; left:0; top:0rpx;  height:12rpx; width:50%; border-radius:6rpx;
background:-moz-linear-gradient(left,#feb817,#fb9611); 
background: -webkit-linear-gradient(left, #feb817, #fb9611); 
}
.coupon_list .li .jd_txt{position:absolute; left:580rpx; top:194rpx; line-height:30rpx; text-align: center; display:inline-block; font-size:24rpx; color:#9d9d9d; }
.coupon_list .li .jd_txt text{color:#e98c00;}
.coupon_list .li .get_btn{position:absolute; right:40rpx; top:240rpx; z-index:2; width:166rpx; text-align:center; height:52rpx; line-height:52rpx; background:#e3e3e3; border-radius:26rpx; font-size:28rpx;}

.coupon_list .li.start .status{background:#25a1cf;}
.coupon_list .li.start .get_btn{
background:-moz-linear-gradient(left,#feb817,#fb9611); 
background: -webkit-linear-gradient(left, #feb817, #fb9611); 
}
.coupon_list .li.end .status{background:#a5a5a5;}

.my_coupon_btn{font-size:30rpx; color:#2a99f1; text-align: center; padding-bottom:50rpx;}

/* 领取成功弹窗 */
.coupon_pop{width:626rpx; height:870rpx; margin:120rpx auto 0; position:relative; text-align: center; box-sizing:border-box; padding:0 40rpx;}
.coupon_pop .title{font-size:48rpx; color:#fff; text-align: center; padding-top:145rpx; margin-bottom:240rpx;}
.coupon_pop .txt{ display:block; font-size:34rpx; line-height:56rpx; color:#555555; margin-bottom:40rpx;}
.coupon_pop .btn{display:inline-block; width:360rpx; text-align:center; height:96rpx; line-height:96rpx;  border-radius:48rpx; font-size:40rpx; color:#fff; box-shadow: 0 10rpx 34rpx rgba(255,96,0,.62);
background:-moz-linear-gradient(left,#ff6000,#ff8a00); 
background: -webkit-linear-gradient(left, #ff6000, #ff8a00); 
}
.coupon_pop .close_btn {position:absolute; bottom:0; left:50%; width:200rpx; margin-left:-100rpx; text-align: center;}
.coupon_pop .close_btn .ico_close{width:50rpx; height:50rpx; background-position: -450rpx -60rpx;}


















