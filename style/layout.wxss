/* ------ 购买数量 --------*/
.buy_num .icons{width:50rpx; height:50rpx; vertical-align: top;}
.buy_num .ico_add{background-position: -150rpx -280rpx;}
.buy_num .ico_minus{background-position: -200rpx -280rpx;}
.buy_num .num{display:inline-block; font-size:36rpx; min-width:100rpx; color:#333; line-height:50rpx; text-align: center;}

/* ------------------- 布局 ------------------- */
.layout_box{padding:40rpx 30rpx;}
.layout_head{ overflow: hidden;margin: 0 0 20rpx 3rpx;}
.layout_head .tit{font-size:34rpx; color:#111111; font-weight:bold; float:left;line-height:50rpx;}
.layout_ctn{padding:0 20rpx; border-radius:15rpx; background:#fff;box-shadow: 0 5rpx 24rpx rgba(0,0,0,.1);}
.layout_ctn .dl{border-bottom:1rpx solid #e5e5e5; padding:30rpx 0;  line-height:50rpx; overflow: hidden;}
.layout_ctn .dl:last-child{border-bottom:none;}
.layout_ctn .dl.bor_no{border-bottom:0;}
.layout_ctn .dl .dt{float:left; font-size:32rpx; line-height:50rpx; color:#333333; width:180rpx;}
.layout_ctn .dl .dd{overflow: hidden; position:relative; line-height:50rpx; }
.layout_ctn .dl .dd .txt{font-size:32rpx; color:#888888; line-height:50rpx; display: block;}
.layout_ctn .dl .dd .input{display:block; width:100%; height:50rpx; line-height:50rpx; font-size:30rpx; color:#333; border:0; padding:0; box-sizing:border-box;}
.layout_ctn .dl .dd .pl_input{color:#c2c2c2;}
.layout_ctn .dl .dd .picker{display:block; width:100%; font-size:30rpx; color:#333;}
.layout_ctn .dl .dd .ico_arrow{width:50rpx; height:50rpx; background-position: -198rpx -60rpx; position:absolute; right:0; top:50%; margin-top:-25rpx; z-index:9;}
.layout_ctn .dl .dd .textarea{display:block; width:100%; height:160rpx; background:#fafafa; border:2rpx solid #e5e5e5; border-radius:10rpx; padding:20rpx; font-size:30rpx; box-sizing: border-box; line-height:40rpx; color:#666;}
.layout_ctn .dl .dd .textarea .placeholder{font-size:26rpx; color:#c2c2c2; line-height:40rpx;}
.layout_ctn .dl .dd .buy_num{float:right; padding-right:10rpx;}
/* 声明 */
.layout_box .statement{font-size:24rpx; color:#9d9d9d; text-align: center; margin-top:10rpx; padding:20rpx 0;}
.layout_box .statement .f_blue{color:#2a99f1; display:inline-block;}

.form_btm{padding:10rpx 0;}
.form_btm .txt{height:100rpx; line-height:100rpx; background:#f5f5f5; text-align: center; color:#999; font-size:28rpx;}
.form_btm .txt .text{color:#ff6000; font-size:40rpx; display: inline-block; vertical-align: middle; margin-left:10rpx;}

/* dt和dd换行的情况 */
.layout_ctn .dl .dt.fl_none{float:none; margin-bottom:20rpx;}
/* 左侧宽度大小，chat5:5个文字，chat6:6个文字 */
.layout_ctn.chat5 .dl .dt{width:210rpx;}
.layout_ctn.chat6 .dl .dt{width:240rpx;}





/* -------------------- 订单时间模板 -----------------------*/
.order_other{ background:#ededed; padding:25rpx 15rpx; margin-top:30rpx; border-radius:10rpx;}
.order_other .p{color:#888888; font-size:26rpx; line-height:30rpx; margin-bottom:15rpx;}
.order_other .p:last-child{margin-bottom:0;}
.order_other .p icon{width:30rpx; height:30rpx; vertical-align: top; margin-right:8rpx;}
.order_other .p .txt{display:inline-block; width:140rpx;}
.order_other .p .ico_time{ background-position: -120rpx -120rpx;}
.order_other .p .ico_bill{ background-position: 0rpx -470rpx;}