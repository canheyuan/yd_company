/* 政策列表 */
.policy_list{padding:30rpx 20rpx;}
.policy_list .li{margin-bottom: 30rpx; border-radius: 10rpx; background:url(https://www.5iparks.com/static/yuanding/images/found/ico_dollar_half.jpg) #fff no-repeat top right; background-size: 108rpx 125rpx; box-shadow: 0 5rpx 30rpx rgba(0,0,0,.1); position:relative;}
.policy_list .li .info {width: 436rpx; padding: 18rpx 0 20rpx 18rpx; float: left;}
.policy_list .li .info .title {color: #333; font-size: 34rpx; line-height: 48rpx; font-weight: bold; margin-bottom:20rpx; display: -webkit-box; -webkit-box-orient: vertical; overflow: hidden; -webkit-line-clamp: 2;}
/* .policy_list .li .info .title .text{color: #fff; font-size: 20rpx; line-height: 36rpx; padding: 0 15rpx; border-radius: 18rpx; border-bottom-right-radius: 0; background: #ff3c00; margin: 7rpx 8rpx 0 0; display: inline-block;} */
.policy_list .li .bonus{width: 214rpx; padding: 26rpx 10rpx 28rpx; border-left: 6rpx dashed #f4f4f4; float: right;}
.policy_list .li .bonus .interpret{color: #9d9d9d; font-size: 24rpx; text-align: center;}
.policy_list .li .bonus .money{color: #ff6000; font-size: 46rpx; font-weight: bold; text-align: center; padding: 12rpx 0 24rpx;}
.policy_list .li .bonus .money .text{font-size: 50%;}

/* 通用按钮 */
.btn_sm{height:52rpx; line-height:52rpx;  text-align: center; margin: 0 auto; border-radius:26rpx; color:#fff; font-size:28rpx; }
.btn_sm.orange{background: linear-gradient(to right, #ff8a00, #ff6000); box-shadow: 0 6rpx 12rpx rgba(255,96,0,.45);}