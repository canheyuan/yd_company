        <view class='info'>
            <view class="price_box">
                <view class="price">￥1000</view>
                <view class="y_price">￥1200</view>
            </view>
            <view class='h3'>{{item.title}}</view>
            <view class='p'>
                <view class="label"><icon class="icons ico_xl"></icon>销量：{{item.xiaoliang}}</view>
                <view class="label"><icon class="icons ico_zx"></icon>咨询：{{item.zixun}}</view>
            </view>
            <view class="rzxx" wx:if="{{!item.ziying}}">
                <view class="ptrz_label"><icon class="icons ico_rz"></icon>平台认证</view>
                <view class="c_name">广州五行教育科技有限公司</view>
