@import "/app.wxss";

.venue_info{border-radius:20rpx;  margin:40rpx 30rpx 0; background:#fff; position:relative;}
.venue_info .label{display:inline-block; width:97rpx; height:42rpx; line-height:38rpx; text-align: center; font-size:24rpx; color:#fff; background-position: -180rpx 0;position:absolute; right:-4rpx; top:30rpx; z-index: 8;}
.venue_info .l_yellow{background-position: -180rpx 0;  }
.venue_info .l_blue{background-position: -70rpx 0;  }
.venue_info .l_gray{background-position: -395rpx 0;  }
.venue_info .top{background:url(https://www.5iparks.com/static/yuanding/images/venue_info_bg.jpg) no-repeat center center; background-size:100% 100%; color:#fff; padding:30rpx 30rpx 40rpx; border-top-left-radius: 20rpx; border-top-right-radius: 20rpx;}
.venue_info .top .p{font-size:24rpx; margin-bottom:10rpx;}
.venue_info .top .h3{font-size:34rpx;}
.venue_info .btm{padding:20rpx 20rpx 30rpx;}
.venue_info .btm .ico_txt .ico_time{background-position: -120rpx -120rpx}
.venue_info .btm .ico_txt .ico_per{background-position: -360rpx -120rpx}

.venue_info.due .top{background:#d0d0d0;}



