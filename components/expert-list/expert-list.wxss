@import "/app.wxss";
@import "/wxParse/wxParse.wxss";

.multiple_nav{height: 80rpx; font-size: 28rpx; line-height: 80rpx; text-align: center; color: #707070; border-bottom: 1rpx solid #ddd;}

.act_list{padding:30rpx 25rpx;}
.act_list .li{background:#fff; border-radius:10rpx; margin-bottom:30rpx; position:relative; overflow: hidden;}
.act_list .li .status{width:97rpx; height:42rpx; line-height:38rpx; background-position:-180rpx 0; font-size:24rpx; color:#fff; text-align: center; position:absolute; left:-5rpx; top:20rpx;}
.act_list .li .top{overflow:hidden; padding:15rpx 0 15rpx 15rpx; }
.act_list .li .top .col1{float:left; width: 180rpx;}
.act_list .li .top .img{width:180rpx; height:180rpx; border-radius: 10rpx;}
.act_list .li .top .icon_like{color: #d7894e; font-size: 28rpx; line-height: 36rpx; text-align: center; margin: 44rpx 0 0; padding-top: 54rpx; background:url(https://www.5iparks.com/static/yuanding/images/icon/ico_favorite_act.png) no-repeat center top; background-size:48rpx 46rpx;}

.act_list .li .top .info{width: 462rpx; padding: 0 10rpx 0 0; float: right; overflow:hidden;}
.act_list .li .top .info .h3{font-size:34rpx; line-height:48rpx; font-weight: 500; display: -webkit-box; -webkit-box-orient: vertical; overflow: hidden; -webkit-line-clamp: 2;}
.act_list .li .top .info .title{color: #888; font-size:24rpx; line-height:32rpx; margin:8rpx 0;}
.act_list .li .top .info .ico_txt.institution{display:inline-block; height:38rpx; line-height:38rpx; padding:0 15rpx 0 6rpx; border-radius:8rpx; font-size:22rpx; color:#acacac; background: #f0f0f0; margin-right:10rpx;}
.act_list .li .top .info .intro{color: #888; font-size: 28rpx; line-height: 40rpx; border-bottom: 1rpx dashed #ccc; padding: 0 10rpx 20rpx 0;  margin: 12rpx -10rpx 0 0; display: -webkit-box; -webkit-box-orient: vertical; overflow: hidden; -webkit-line-clamp: 3; max-height:120rpx; }
.act_list .li .top .info .intro>view{ display: -webkit-box; -webkit-box-orient: vertical; overflow: hidden; -webkit-line-clamp: 3; max-height:120rpx; }
.act_list .li .top .info .intro view{font-size:30rpx!important; line-height:40rpx!important; color:#666!important;}

.act_list .li .top .info .label{font-size:28rpx; color:#666; margin: 20rpx 0 0;}
.act_list .li .top .info .label text{color:#ff6000;}
.act_list .li .top .info .label icon{width:50rpx; height:50rpx; vertical-align: middle; margin-right:10rpx; position:relative; top:-2rpx; background:url(https://www.5iparks.com/static/yuanding/images/icon/ico_handshake.png) no-repeat; background-size:50rpx 50rpx;}
.act_list .li .top .info .label .ico_zd{background-position: top left;}

.act_list .li .btm{border-top:1rpx solid #e5e5e5; background: #fcfcfc; padding:14rpx; overflow: hidden;}
.act_list .li .btm .blue_btn{width: 46%; height:72rpx; line-height:72rpx; border-radius:36px; font-size:28rpx; margin:0 auto; box-shadow: 0 6rpx 10rpx rgba(101,146,254,.36);}

/* 标签 */
.yd_label text{height:34rpx; line-height:34rpx; padding:0 15rpx; border:1rpx solid #bdbdbd; border-radius:8rpx; font-size:22rpx; color:#aeaeae; margin-right:10rpx;}

.ico_favorite_corner{position: absolute; width: 65rpx; height: 65rpx; top:0; right: 0; border-top-right-radius: 10rpx; overflow: hidden; background:url(https://www.5iparks.com/static/yuanding/images/icon/ico_favorite_corner.png) no-repeat top right; background-size: contain;}
.ico_favorite_corner.act{background-image:url(https://www.5iparks.com/static/yuanding/images/icon/ico_favorite_corner_act.png)}

