@import "/app.wxss";

/* 评论区 */
.bxnr_tit{text-align: center; font-size:28rpx; color:#777; line-height:40rpx; height:40rpx; padding:56rpx 0 24rpx; background: #f7f7f7;}
.bxnr_tit::before{content:'————'; color:#d7d7d7; display:inline-block; font-size:24rpx; line-height:40rpx; margin-right:30rpx;}
.bxnr_tit::after{content:'————'; color:#d7d7d7; display:inline-block; font-size:24rpx; line-height:40rpx; margin-left:30rpx; vertical-align: middle;}
.comment_area{padding: 60rpx 30rpx 0; background:#fff;}
.comment_item{ padding-bottom: 30rpx;}
.comment_head{width: 64rpx; height: 64rpx; overflow: hidden; float: left;}
.comment_head .img{width: 64rpx; height: 64rpx; border-radius: 50%;}
.comment_user{color: #2a99f1; font-size: 26rpx; font-weight: bold; line-height: 34rpx; padding: 0 18rpx; float: left;}
.comment_user text{color: #9d9d9d; font-size: 24rpx; font-weight: normal;}
.comment_like{ width: 60rpx; color: #9d9d9d; font-size: 24rpx; line-height: 34rpx; text-align: center; padding-top: 30rpx; margin-top: 4rpx; float: right; background:url(https://www.5iparks.com/static/yuanding/images/icon/ico_like.png) no-repeat center top; background-size: 32rpx 30rpx;}
.comment_like.act{ color: #d7894e; background-image:url(https://www.5iparks.com/static/yuanding/images/icon/ico_like_act.png); }
.comment_cnt{clear: both; color: #555; font-size: 30rpx; line-height: 44rpx; padding: 22rpx 0 0 82rpx;}

/* 底部工具栏 */
.tool_bar{box-sizing: border-box; width: 100%; height: 110rpx; padding: 0 26rpx 0 30rpx; position: fixed; bottom: 0; background: #f9f9f9; z-index: 2;box-shadow: 0 -7rpx 24rpx rgba(0,0,0,.08);}
.text_input{width: 430rpx; height: 82rpx; margin-top: 14rpx; border-radius: 41rpx; background: #e8e8e8; float: left;}
.text_input .icon{width: 26rpx; height: 32rpx; margin: 25rpx 0 0 32rpx; background:url(https://www.5iparks.com/static/yuanding/images/icon/icon_pen.png) no-repeat center top; background-size: 100%; float: left;}
.text_input input{color: #333; font-size: 30rpx; width: 335rpx; height: 82rpx; margin-left:10rpx; float: left;}
.text_input .placeholder{color: #aaa;}
.icon_box{ width: 50rpx; color: #666;font-size: 22rpx; line-height: 32rpx; text-align: center; padding: 44rpx 0rpx 0; margin: 21rpx 8rpx 0; float: right; background: no-repeat center top; background-size: 42rpx 42rpx; border:none!important;}
.icon_box::after{border:none; border-radius:0;}
.icon_share{background-image:url(https://www.5iparks.com/static/yuanding/images/icon/ico_share.png); }
.icon_favorite{background-image:url(https://www.5iparks.com/static/yuanding/images/icon/ico_favorite.png); }
.icon_favorite.act{color: #d7894e; background-image:url(https://www.5iparks.com/static/yuanding/images/icon/ico_favorite_act.png); }
.icon_comment{background-image:url(https://www.5iparks.com/static/yuanding/images/icon/ico_comment.png); }
.icon_comment.act{color: #d7894e; background-image:url(https://www.5iparks.com/static/yuanding/images/icon/ico_comment_act.png); }